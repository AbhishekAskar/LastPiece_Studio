---
import "@/styles/global.css";
// import { Navbar } from "@/components/layout/Navbar"; // Will be ported
// import { Footer } from "@/components/layout/Footer"; // Will be ported

interface Props {
	title: string;
	description?: string;
}

const { title, description = "LastPiece Studio - Crafting Digital Intentionality" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
	</head>
	<body class="bg-background text-foreground antialiased selection:bg-brand-purple/20 selection:text-brand-purple">
		<!-- <Navbar client:load /> -->
		<slot />
		<!-- <Footer /> -->
	</body>
</html>
